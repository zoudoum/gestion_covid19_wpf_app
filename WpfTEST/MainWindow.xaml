<Window x:Class="WpfTEST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTEST"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#3772FF">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="113*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#FF5733">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="bouton1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,18,0,0" Height="44" Width="250" Grid.Row="0" Background="#3772FF" Click="boutonClick1">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Viewbox Width="50" VerticalAlignment="Center">
                        <Canvas Width="40" Height="24" HorizontalAlignment="Left">
                            <Path
                    Data="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5Z"
                    Stroke="Black"
                    StrokeThickness="2"
                    Fill="Black"
                    Width="30"
                    Height="34"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Canvas.Left="-5.2" Canvas.Top="4.8"
                />
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Voir les structures de santé" Width="180" FontSize="13" Foreground="#FFFFF6F6"/>
                </StackPanel>
            </Button>

            <Button VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,18,0,0" Height="44" Width="250" Grid.Row="1" Background="#3772FF" Click="boutonClick2">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Viewbox Width="50" VerticalAlignment="Center">
                        <Canvas Width="40" Height="24" HorizontalAlignment="Left">
                            <Path
                    Data="M8 1a3 3 0 1 0 0 6 3 3 0 0 0 0-6zM4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999zm2.493 8.574a.5.5 0 0 1-.411.575c-.712.118-1.28.295-1.655.493a1.319 1.319 0 0 0-.37.265.301.301 0 0 0-.057.09V14l.002.008a.147.147 0 0 0 .016.033.617.617 0 0 0 .145.15c.165.13.435.27.813.395.751.25 1.82.414 3.024.414s2.273-.163 3.024-.414c.378-.126.648-.265.813-.395a.619.619 0 0 0 .146-.15.148.148 0 0 0 .015-.033L12 14v-.004a.301.301 0 0 0-.057-.09 1.318 1.318 0 0 0-.37-.264c-.376-.198-.943-.375-1.655-.493a.5.5 0 1 1 .164-.986c.77.127 1.452.328 1.957.594C12.5 13 13 13.4 13 14c0 .426-.26.752-.544.977-.29.228-.68.413-1.116.558-.878.293-2.059.465-3.34.465-1.281 0-2.462-.172-3.34-.465-.436-.145-.826-.33-1.116-.558C3.26 14.752 3 14.426 3 14c0-.599.5-1 .961-1.243.505-.266 1.187-.467 1.957-.594a.5.5 0 0 1 .575.411z"
                   Stroke="Black"
StrokeThickness="2"
Fill="#3772FF"
Width="30"
Height="34"
HorizontalAlignment="Left"
VerticalAlignment="Top" Canvas.Left="-5.2" Canvas.Top="4.8"
                />
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Carte map" Width="180" FontSize="13" Foreground="#FFFFF6F6"/>
                </StackPanel>
            </Button>

            <Button VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,18,0,0" Height="44" Width="250" Grid.Row="2" Background="#3772FF" Click="boutonClick3">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Viewbox Width="50" VerticalAlignment="Center">
                        <Canvas Width="40" Height="24" HorizontalAlignment="Left">
                            <Path
                    Data="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"
                    Stroke="Black"
StrokeThickness="2"
Fill="#3772FF"
Width="30"
Height="34"
HorizontalAlignment="Left"
VerticalAlignment="Top" Canvas.Left="-5.2" Canvas.Top="4.8"
                />
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Prendre rendez-vous" Width="180" FontSize="13" Foreground="#FFFFF6F6"/>
                </StackPanel>
            </Button>

            <Button VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,18,0,0" Height="44" Width="250" Grid.Row="3" Background="#3772FF" Click="boutonClick4">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Viewbox Width="50" VerticalAlignment="Center">
                        <Canvas Width="40" Height="24" HorizontalAlignment="Left">
                            <Path
                    Data="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"
                    Stroke="Black"
StrokeThickness="2"
Fill="#3772FF"
Width="30"
Height="34"
HorizontalAlignment="Left"
VerticalAlignment="Top" Canvas.Left="-5.2" Canvas.Top="4.8"
                />
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Disponibilité test ou vaccin" Width="180" FontSize="13" Foreground="#FFFFF6F6"/>
                </StackPanel>
            </Button>
        </Grid>
        <Frame Grid.Column="1"  x:Name="contenu"  Foreground="#FFD0C8C8">
        </Frame>
        <TextBox x:Name="recherche" Grid.Column="1" HorizontalAlignment="Left" Margin="21,47,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="144" />
        <DataGrid x:Name="dataGridView1" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="21,98,0,21" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" />
                <DataGridTextColumn Header="Adresse" Binding="{Binding Adresse}" />
                <DataGridTextColumn Header="Contact" Binding="{Binding Contact}" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="titre" Grid.Column="1" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Structure de sante" VerticalAlignment="Top" Foreground="#FFFFF6F6" FontSize="22" Margin="0,10,0,0"/>
        <TextBlock x:Name="tblrech" Grid.Column="1" HorizontalAlignment="Left" Margin="178,47,0,0" TextWrapping="Wrap" Text="Rechercher" VerticalAlignment="Top" Foreground="#FFEFEFEF"/>



    </Grid>
</Window>
